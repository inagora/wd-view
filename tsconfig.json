{
	"compilerOptions": {
		"module": "ESNext",
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"jsx": "preserve",
		"noLib": false,
		"target": "es6",
		"sourceMap": true,
		"lib": ["ESNext", "DOM"],
		"allowSyntheticDefaultImports": true
	},
	"exclude": ["node_modules"]
}
