{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"useDefineForClassFields": true,
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["es6", "dom"],
		"baseUrl": "./",
		"paths": {
			"@": ["src"],
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"*.ts"
	],
	"exclude": ["node_modules"]
}
