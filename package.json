{
	"name": "@inagora/wd-view",
	"version": "1.3.6",
	"description": "基于Vue3和Typescript的UI组件库",
	"main": "dist/index.js",
	"scripts": {
		"start": "webpack serve --config webpack.dev.config.js --mode development --env development --profile --progress",
		"build": "webpack --config webpack.prod.config.js --mode production --env production",
		"test": "vue-cli-service test:unit --watch",
		"test:co": "vue-cli-service test:unit --coverage",
		"docs:dev": "vuepress dev docs",
		"docs:build": "vuepress build docs",
		"lint": "lint-staged --allow-empty",
		"prepare": "husky install"
	},
	"keywords": [
		"UI",
		"vue3",
		"vue",
		"Typescript",
		"framework",
		"components",
		"ant-design-vue"
	],
	"author": "lijieniu",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.12.17",
		"@babel/plugin-transform-runtime": "^7.12.17",
		"@babel/preset-env": "^7.12.17",
		"@babel/preset-react": "^7.18.6",
		"@commitlint/cli": "^17.6.5",
		"@commitlint/config-conventional": "^17.6.5",
		"@types/jest": "^27.0.1",
		"@typescript-eslint/eslint-plugin": "^5.60.0",
		"@typescript-eslint/parser": "^5.60.0",
		"@vue/babel-plugin-jsx": "^1.1.1",
		"@vue/cli-plugin-babel": "~5.0.0",
		"@vue/cli-plugin-typescript": "~5.0.0",
		"@vue/cli-plugin-unit-jest": "~5.0.0",
		"@vue/cli-service": "~5.0.0",
		"@vue/compiler-sfc": "^3.0.5",
		"@vue/eslint-config-typescript": "^11.0.3",
		"@vue/test-utils": "^2.0.0-0",
		"@vue/vue3-jest": "^27.0.0-alpha.1",
		"babel-jest": "^27.0.6",
		"babel-loader": "^8.2.2",
		"babel-plugin-import": "^1.13.3",
		"clean-webpack-plugin": "^3.0.0",
		"commitlint": "^17.6.5",
		"copy-webpack-plugin": "^7.0.0",
		"css-loader": "^5.0.2",
		"css-minimizer-webpack-plugin": "^3.2.0",
		"eslint": "^8.3.0",
		"eslint-plugin-vue": "^9.15.0",
		"html-webpack-plugin": "^5.2.0",
		"husky": "^8.0.3",
		"jest": "^27.0.5",
		"less": "^4.1.1",
		"less-loader": "^8.0.0",
		"lint-staged": "^13.2.2",
		"mini-css-extract-plugin": "^1.3.8",
		"style-loader": "^2.0.0",
		"ts-jest": "^27.0.4",
		"ts-loader": "^9.2.6",
		"typescript": "^4.5.5",
		"vue": "^3.2.29",
		"vue-loader": "^17.0.0",
		"vuepress": "2.0.0-beta.27",
		"webpack": "^5.23.0",
		"webpack-cli": "^4.5.0",
		"webpack-dev-server": "^3.11.2"
	},
	"dependencies": {
		"@babel/runtime": "^7.12.18",
		"@popperjs/core": "^2.11.0",
		"ant-design-vue": "3.2.15",
		"async-validator": "^3.4.0",
		"lodash": "^4.17.21",
		"mitt": "^2.1.0",
		"vue3-popper": "^1.4.1"
	},
	"files": [
		"dist/index.js",
		"dist/index.css"
	],
	"eslintConfig": {
		"env": {
			"commonjs": true,
			"es6": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:vue/recommended",
			"prettier"
		],
		"plugins": [
			"vue"
		],
		"parserOptions": {
			"parser": "babel-eslint",
			"sourceType": "module",
			"ecmaVersion": "2019"
		},
		"rules": {
			"indent": [
				"error",
				"space",
				{
					"SwitchCase": 1
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"object-shorthand": [
				"error",
				"always"
			],
			"one-var": [
				2,
				{
					"var": "never",
					"let": "never",
					"const": "never"
				}
			],
			"comma-spacing": [
				"error",
				{
					"before": false,
					"after": true
				}
			],
			"implicit-arrow-linebreak": [
				"error",
				"beside"
			],
			"no-console": 2,
			"no-unused-vars": [
				"error"
			],
			"key-spacing": [
				"error",
				{
					"beforeColon": false,
					"afterColon": true,
					"mode": "strict"
				}
			],
			"no-invalid-regexp": "error",
			"vue/singleline-html-element-content-newline": 0,
			"vue/max-attributes-per-line": 0,
			"vue/no-v-html": "off"
		},
		"overrides": [
			{
				"files": [
					"**/__tests__/*.{j,t}s?(x)",
					"**/tests/unit/**/*.spec.{j,t}s?(x)"
				],
				"env": {
					"jest": true
				}
			}
		]
	},
	"jest": {
		"preset": "@vue/cli-plugin-unit-jest/presets/typescript-and-babel"
	},
	"lint-staged": {
		"src/**/*.{ts,vue}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"prettier": {
		"tabWidth": 2,
		"printWidth": 80,
		"useTabs": true,
		"semi": true,
		"singleQuote": true
	},
	"directories": {
		"doc": "docs"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/inagora/wd-view.git"
	},
	"bugs": {
		"url": "https://github.com/inagora/wd-view/issues"
	},
	"homepage": "https://github.com/inagora/wd-view#readme"
}
